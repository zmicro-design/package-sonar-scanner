#!/bin/bash

export PACKAGE_NAME="sonar-scanner"
import "$ZMICRO_PACKAGES_PATH/$PACKAGE_NAME/config"
import "$ZMICRO_PACKAGES_PATH/$PACKAGE_NAME/core"

help() {
  echo "Usage:"
  echo "  zmicro sonar-scanner <args ...>"
  echo ""

  sonar-scanner --help
}

version() {
  sonar-scanner --version
}

core() {
  # context directory
  local context="$ZMICRO_PACKAGES_DATA_PATH/sonar-scanner"
  if [ ! -d "$context" ]; then
    mkdir -p $context
  fi
  cd $context
  # context directory

  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    sonar-scanner "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
